{
    "env":{
      "browser":true,
      "es2021":true
    },
    "extends":[
      "airbnb-base"
    ],
    "parserOptions":{
      "ecmaVersion":"latest",
      "sourceType":"module"
    },
    "rules":{
      "semi":[
        "error",
        "never"
      ],
      "object-curly-spacing":"error",
      "camelcase":"off",
      "indent":[
        "warn",
        2,
        {
          "ignoredNodes":[
            "TemplateLiteral"
          ]
        }
      ],
      "template-curly-spacing":"off",
      "quotes":[
        "warn",
        "single",
        {
          "avoidEscape":true
        }
      ],
      "no-unused-vars":"warn",
      "no-underscore-dangle":"off",
      "no-nested-ternary":"off",
      "no-use-before-define":"off"
    }
  }